    <dimen name="car_ui_padding_3">24dp</dimen>
    <dimen name="car_ui_padding_4">32dp</dimen>
    <dimen name="car_ui_padding_5">64dp</dimen>
    <dimen name="car_ui_padding_6">96dp</dimen>

    <!-- Type Sizings -->
